        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            @* Aqui gerencia o login e logou do usuario *@
                @if (ViewBag.usuario !=null && ViewBag.usuario !="Não Logado") { 
                    <form method="post" asp-controller="Usuarios" asp-action="Logout">
                        <span class="fa fa-user"></span>

                        <input class="btn btn-link text-bold text-black" type="submit" value=@ViewBag.usuario />
                    </form>
                }
                else
                {
                    <a class="nav-link" asp-controller="Usuarios" asp-action="LogarUsuario">
                        <div class="user-panel d-flex">
                            <span class="fa fa-user"></span>
                            <div class="info fc-center text-bold">Logar</div>
                        </div>
                    </a>
                }

                
            
