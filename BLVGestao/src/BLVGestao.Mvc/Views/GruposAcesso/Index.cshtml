@model IEnumerable<BLVGestao.Domain.Model.GrupoAcesso>

@{
    ViewData["Title"] = "Index";
}

<div class="content-header container-fluid row mb-2 col-sm-6">
    <h1 class="m-0 text-dark">Grupo de Usuário</h1>
    @*<div class="input-group input-group-sm">
        <input class="form-control form-control-navbar" type="search" placeholder="Codigo" aria-label="GrupoAcessoId ">
        <input class="form-control form-control-navbar" type="search" placeholder="Descrição" aria-label="Descricao">
        <button class="btn btn-navbar" type="submit">
            <i class="fas fa-search"></i>
        </button>*@

</div>
<div>
    <button class="btn btn-outline-success">
        <a class="fa fa-plus" asp-action="Create">&emsp;Novo</a>
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permissao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Permissao)
                </td>
                <td>
                    <button type="button" class="btn btn-warning fa fa-pencil">
                        <a class="text-white text-decoration-none" asp-action="Edit" asp-route-id="@item.GrupoAcessoId">Editar</a>
                    </button>
                    <button type="button" class="btn btn-info fa fa-search">
                        <a class="text-white text-decoration-none" asp-action="Details" asp-route-id="@item.GrupoAcessoId">Detalhes</a>
                    </button>
                    <button type="button" class="btn btn-danger fa fa-trash">
                        <a class="text-white text-decoration-none" asp-action="Delete" asp-route-id="@item.GrupoAcessoId">Excluir</a>
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>