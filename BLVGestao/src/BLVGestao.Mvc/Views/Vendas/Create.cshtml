@model BLVGestao.Mvc.Models.VendaViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Venda</h1>
<hr />
<div class="row">
    <div class="col-5">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Cliente</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Cliente.PessoaId" class="control-label"></label>
                    @*<select asp-for="Cliente.PessoaId" class="form-control" asp-items="ViewBag.ClienteId"></select>*@
                <select asp-for="ListaCliente" class="form-control">
                    @foreach (var item in Model.ListaCliente)
                    {
                        <option value="2">@item.Nome</option>
                    }
                </select>

                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Total</h3>
            </div>
            <div class="card-body">
                <h1>R$ 00,00</h1>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-5">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Produtos</h3>
            </div>
            <div class="card-body">
                <label asp-for="Produto" class="control-label">Produtos</label>
                @*<select asp-for="Produto" class="form-control" asp-items="ViewBag.ProdutoId" id="produto"></select>*@
                <select asp-for="ListaProduto" class="form-control">
                    @foreach (var item in Model.ListaProduto)
                    {
                        <option value="@item.Descricao">@item.Descricao</option>
                    }
                </select>
                <label asp-for="Quantidade" class="control-label">Quantidade</label>
                <input asp-for="Quantidade" class="form-control" id="quantidade" />


                <a class="btn btn-success fa fa-plus" id="btnAdicionarProduto">Incluir</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Lista Produtos</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Descrição</th>
                            <th>Qtd</th>
                            <th>Uni</th>
                            <th>Valor Unitario</th>
                            <th>Valor Total</th>
                        </tr>
                    </thead>
                    <tbody id="tBodyProdutos"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Finalizar</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="FormaDePagamento.FormaDePagamentoId" class="control-label">Forma de pagamento</label>
                    @*<select asp-for="FormaDePagamento.FormaDePagamentoId" class="form-control" asp-items="ViewBag.FornecedorId"></select>*@
                    <a class="btn">Finalizar</a>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

